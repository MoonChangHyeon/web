{
  "feature": "Web Activity Log Viewer",
  "description": "전체 웹 활동 로그를 관리자가 조회할 수 있는 로그 메뉴를 제공합니다. 사용자 요청 내역, URL, IP, 상태 코드, 시간 등을 기록 및 조회할 수 있습니다.",
  "modules": [
    {
      "name": "Activity Log List Page",
      "path": "/admin/logs",
      "description": "로그 목록을 테이블 형태로 보여주며, 다양한 필터링 및 정렬 기능 포함",
      "features": [
        "로그 ID, 사용자 ID, 사용자명, 요청 URL, HTTP Method, IP 주소, 상태 코드, 요청 시간, 응답 시간 표시",
        "날짜/사용자/URL별 검색 필터",
        "상세 로그 보기 링크",
        "페이지네이션 및 정렬"
      ]
    },
    {
      "name": "Activity Log Detail Page",
      "path": "/admin/logs/{id}",
      "description": "단일 로그의 상세 정보를 보여줌",
      "features": [
        "전체 HTTP 요청/응답 헤더 정보",
        "요청 Body (가능한 경우)",
        "응답 Body (가능한 경우)",
        "요청 처리 소요 시간 표시"
      ]
    }
  ],
  "backend": {
    "techStack": "Spring Boot + Spring AOP (또는 HandlerInterceptor)",
    "entity": "WebActivityLog",
    "repository": "WebActivityLogRepository",
    "service": "WebActivityLogService",
    "controller": "AdminLogController"
  },
  "frontend": {
    "techStack": "Thymeleaf + Bootstrap",
    "templates": [
      "logs/list.html",
      "logs/detail.html"
    ]
  },
  "database": {
    "table": "web_activity_logs",
    "columns": [
      "id (PK)",
      "user_id (nullable)",
      "username",
      "http_method",
      "request_url",
      "query_string",
      "request_body",
      "response_status",
      "ip_address",
      "user_agent",
      "request_time",
      "response_time",
      "duration_ms"
    ]
  },
  "security": {
    "access": "ROLE_ADMIN 전용",
    "authorization": "Spring Security 기반 접근 제어 설정 필요"
  },
  "logging": {
    "method": "Spring HandlerInterceptor 또는 AOP 기반 요청 로깅",
    "persistence": "요청 종료 후 WebActivityLog 테이블에 저장",
    "excludePaths": ["/css/**", "/js/**", "/images/**", "/favicon.ico"]
  }
}

