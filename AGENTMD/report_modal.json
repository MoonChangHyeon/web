{
  "modal": "report_generator",
  "description": "분석 완료 FPR에서 PDF 또는 XML 보고서를 생성하는 모달 창",
  "triggerElement": "button[id='btn-generate-report']",
  "ui": {
    "modalId": "reportModal",
    "fields": {
      "format": {
        "type": "radio",
        "label": "출력 형식",
        "options": ["pdf", "xml"],
        "default": "pdf"
      },
      "template": {
        "type": "select",
        "label": "템플릿",
        "options": ["Default", "DeveloperWorkbook", "ExecutiveSummary"]
      },
      "filterSet": {
        "type": "select",
        "label": "필터 세트",
        "options": ["All Issues", "Critical", "Custom"]
      }
    },
    "buttons": [
      { "id": "btn-generate", "label": "생성", "action": "generateReport()" },
      { "id": "btn-close", "label": "닫기", "action": "closeModal()" }
    ]
  },
  "tools": {
    "ReportGenerator": {
      "binary": "ReportGenerator",
      "commandTemplate": "ReportGenerator -format ${format} -f ${reportPath} -source ${fprPath} -template ${template} -filterSet ${filterSet}"
    }
  },
  "api": {
    "generateReport": {
      "method": "POST",
      "url": "/api/analysis-requests/{id}/report",
      "payload": {
        "format": "pdf",
        "template": "Default",
        "filterSet": "All Issues"
      }
    },
    "downloadReport": {
      "method": "GET",
      "url": "/api/analysis-requests/{id}/report/download",
      "queryParams": {
        "format": "pdf"
      }
    }
  },
  "database": {
    "updateFields": {
      "report_pdf_path": "TEXT",
      "report_xml_path": "TEXT",
      "report_generated_at": "TIMESTAMP"
    }
  }
}
